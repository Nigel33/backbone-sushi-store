<div class="img_top"></div>
<section>
  <h1>Order Details</h1>
  <table>
    <thead>
      <tr>
        <th>Item</th>
        <th></th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      {{#each models}}
      <tr data-id="{{attributes.id}}">
        <td><img src="{{attributes.img}}" alt="cart-item"></td>
        <td>{{attributes.name}}</td>
        <td>
          <span class="quantity_modifier">
            <i class="fa fa-minus" aria-hidden="true"></i>
          </span>
          <p>{{attributes.quantity}}</p>
          <span class="quantity_modifier">
            <i class="fa fa-plus" aria-hidden="true"></i>
          </span>
        </td>
        <td>${{format_price attributes.price}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <p>Total: <span class="total">${{format_price totalPrice}}</span></p>
  <footer>
    <a class="cancel" href="/">Cancel order</a>
    <form action="/" method="post">
      <input type="submit" value="ORDER NOW!">
    </form>
  </footer>
</section>
<div class="img_bottom"></div>
