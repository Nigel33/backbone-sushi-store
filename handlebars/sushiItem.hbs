<div>
  <div class="nav prev">
    <img src="images/nav-prev.png" alt="prev">
  </div>
  <figure>
    <img src="{{img}}" alt="selected-item">
  </figure>
  <article>
    <a class="close" href="/">+</a>
    <h1>{{name}}</h1>
    <p>{{description}}</p>
    <footer>
      <h2>${{format_price price}}</h2>
      <a class="add_cart" href="#">Add to cart</a>
    </footer>
  </article>
  <aside>
    <h3>Nutritional Information</h3>
    <table>
      <tbody>
      {{#each nutrition }}
        <tr>
          <td>{{formatKey this}}</td>
          <td>{{getValue this}}</td>
        </tr>
      {{/each}}
      </tbody>
    </table>
  </aside>
  <div class="nav next">
    <img src="images/nav-next.png" alt="next">
  </div>
</div>

