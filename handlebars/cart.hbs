
<ul>
  {{#each models}}
  <li data-id="{{attributes.id}}">
    <figure>
      <img src="{{attributes.img}}" alt="cart-item">
    </figure>
    <p>{{attributes.quantity}} x ${{format_price attributes.price}}</p>
  </li>
  {{/each}}
</ul>
<section>
  <h3>Your<br>shopping cart</h3>
  <p class="total">{{format_price totalPrice}}</p>
  <p></p>
  <footer>
    <a class="left empty_cart" href="#">Empty cart</a><!--
    --><a class="right checkout" href="/checkout">Checkout</a>
  </footer>
</section>

